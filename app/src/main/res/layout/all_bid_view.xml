<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_currentload"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Indore to Bhopal"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:id="@+id/location"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Material: Steel"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/material"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qeight: 2 ton"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/weight"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="Amount: 20000/-"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/amount"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="30dp"
                android:text="confirmed"
                android:id="@+id/status"
                android:textColor="@color/white"
                android:layout_marginRight="-20dp"
                android:background="@drawable/background_btn_all_bid"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>